---

export interface Props {
  image?: string
  heading?: string
  title: string
  date: string
  url: string
}

const {
  image = '/assets/img/banner-7.jpg',
  heading = 'Upcoming Event',
  title,
  date,
  url
} = Astro.props;
---

<div class="section sm bg-secondary-1" style={`background-image: url(${image})`}>
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-4 mb-4 mb-lg-0">
        <div class="section-title mb-0">
          <h3 class="family-display fw-400">{heading}</h3>
          <p class="mb-0">{title}</p>
        </div>
      </div>
      <div class="col-lg-6 mb-4 mb-lg-0">
        <div class="andro_countdown-timer mb-0 andro_event-countdown-timer style-3" data-countdown={date}></div>
      </div>
      <div class="col-lg-2">
        <a href={url} class="button primary">More Information</a>
      </div>
    </div>
  </div>
</div>
