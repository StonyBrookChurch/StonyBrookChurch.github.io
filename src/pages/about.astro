---
import { getCollection } from 'astro:content';
import Page from '@layouts/Page.astro';
import RenderEntry from '@components/collections/RenderEntry.astro';

const sections = await getCollection('about');
---

<Page title="About Us" description="Lorem ipsum dolor sit amet" image="/assets/uploads/hero/band-2.jpg">
  <div class="section">
    <div class="container">
      {sections.map((section) =>
        <div class="andro_show-d-content-wrap">
          <div class="andro_show-d-section">
            <h4 id={section.slug}>{section.data.title}</h4>
            <div class="andro_show-d-section-content">
              <RenderEntry entry={section} />
            </div>
          </div>
        </div>
      )}
    </div>
  </div>
</Page>
